    </ContentPage.Resources>
    <ContentPage.Content>
        <StackLayout Padding="15,0,15,0" VerticalOptions="FillAndExpand">
            <Label FontSize="30" Text="{Binding Post.Title}"/>
            <ScrollView>
                <StackLayout>
                <Label FontSize="15"
                       Text="{Binding Post.Body}" />
                    <FlexLayout Direction="Row" Wrap="Wrap"   BindableLayout.ItemsSource="{Binding Post.AllFiles}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate>
                                <Image Source="{Binding Path}"/>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                    <Button Text="Загрузить комментарии"
                            HorizontalOptions="FillAndExpand"
                            IsVisible="{Binding IsCommentsLoading,Converter={StaticResource inverseBoolConverter}}"
                            Command="{Binding LoadCommentsCommand}"/>
                    <ActivityIndicator IsVisible="{Binding IsCommentsLoading}"
                                       IsRunning="True" />
                    <Label Text="Ошибка при загрузке комментариев"
                           IsVisible="{Binding IsCommentsLoadingError}"/>
                    <components:CommentsTreeElement BindingContext="{Binding Comments}" />
                </StackLayout>
            </ScrollView>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>