             xmlns:converters="clr-namespace:Kouch.App.Converters"
             xmlns:components="clr-namespace:Kouch.App.Views.Components"
             x:Class="Kouch.App.Views.Pages.PostPage" x:Name="this">
    <ContentPage.Title>
        <Binding Path="Post.Title">
            <Binding.Converter>
                <converters:SubstringConverter Length="15"
                                               AddDots="True" />
            </Binding.Converter>
        </Binding>
</ContentPage.Title>
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:InverseBoolConverter x:Key="inverseBoolConverter" />
            <converters:SubstringConverter x:Key="substringConverter" />
