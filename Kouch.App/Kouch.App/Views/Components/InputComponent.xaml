<?xml version="1.0" encoding="UTF-8"?>
<ContentView xmlns="http://xamarin.com/schemas/2014/forms" 
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Kouch.App.Views.Components.InputComponent">
  <ContentView.Content>
      <StackLayout Margin="0,0,0,0" >
            <Label Text=""
                   x:Name="HeaderLabel"
                   IsVisible="true"
                   Margin="10,0,0,0" />
            <ContentView x:Name="BodyContent"
                         VerticalOptions="FillAndExpand" />
            <ActivityIndicator x:Name="LoadingIndicator" IsVisible="false"/>
            <Label Text="" Margin="10,0,0,0"
                   IsVisible="true"
                   x:Name="ErrorLabel" />
        </StackLayout>
  </ContentView.Content>
</ContentView>